config ISH
	def_bool y
	select GENERIC_ATOMIC64
	select GENERIC_IRQ_SHOW
	select THREAD_INFO_IN_TASK
	select HAVE_FUTEX_CMPXCHG
	select VMALLOC_BROKEN
	select HAVE_COPY_THREAD_TLS
	select SYSCTL_EXCEPTION_TRACE
	select GENERIC_SCHED_CLOCK
	select GENERIC_CPU_DEVICES
	select GENERIC_CLOCKEVENTS
	select ARCH_USE_QUEUED_RWLOCKS
	select ARCH_USE_QUEUED_SPINLOCKS

config ISH_MAIN
	bool
	default y

config ISH_EMULATOR
	string
	default ishemu

config ARCH_RANDOM
	def_bool y
	prompt "Host random number generator" if EXPERT

config ARCH_KALLSYMS
	depends on KALLSYMS
	def_bool y

config LOCKDEP_SUPPORT
	def_bool y
config STACKTRACE_SUPPORT
	def_bool y
config TRACE_IRQFLAGS_SUPPORT
	def_bool y

# ABI vore
config 64BIT
	bool
	default y
config COMPAT
	def_bool y
config IA32_EMULATION
	def_bool y
config SYSVIPC_COMPAT
	def_bool y
	depends on SYSVIPC

config MMU
	bool
	default y

config SMP
	bool "Symmetric multi-processing support"
	default y
config NR_CPUS
	int "Maximum number of CPUs"
	range 2 32
	depends on SMP
	default 8

config HZ
	int "HZ"
	default 100

config PGTABLE_LEVELS
	int
	default 3

config NO_DMA
	def_bool y
config NO_IOMEM
	def_bool y
config NO_VMALLOC
	def_bool y
config GENERIC_HWEIGHT
	def_bool y
config GENERIC_CSUM
	def_bool y

config HOSTFS
	bool "Host filesystem"

config HOST_INET
	bool "Host-based AF_INET"
	default y
	depends on NET && !INET

config GOLP
	bool "Golp interface"
	default y
	depends on INET
